<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>

    <div class="container">
        <div class="row">


            <a class="btn btn-outline-primary" href="/admin/home" style="margin-top: 40px; margin-bottom: 20px;"> < Back </a><br><br>

            <table width="50%" class="table table-bordered border-dark justify-content-center ">
                <tr class="table-primary">
                    <th>Name</th>
                    <th>Email</th>
                    <th>Image</th>
                    <th>Verified</th>
                    <th>Action</th> 
                </tr>

                <% if(users.length> 0){
                    for(let i=0; i<users.length; i++){ %>
                        <tr>
                            <td>
                                <%= users[i].name %>
                            </td>
                            <td>
                                <%= users[i].email %>
                            </td>
                            <td><img src="/userImages/<%= users[i].image %>" alt="<%= users[i].Image %>" width="100px"
                                    height="100px"></td>
                            <!-- <td><%= users[i].is_varified %></td> -->
                            <td>
                                <% if(users[i].is_varified==0){ %>
                                    <p>Not Varified</p>
                                    <% } else{ %>
                                        <p>Varified</p>
                                        <% } %>
                            </td>
                            <td>
                                <a class="btn btn-primary" href="/admin/varify?id=<%= users[i]._id %>">Done</a>
                                <!-- <a class="btn btn-primary" href="/admin/accecpt?id=<%= users[i]._id %>">Done</a> -->


                                <a class="btn btn-outline-primary" href="/admin/delete-user?id=<%= users[i]._id %>">Delete</a>
                            </td>


                        </tr>

                        <% } } else{ %>
                            <tr>
                                <td colspan="5">User Not Found</td>
                            </tr>
                            <% } %>

            </table>


            <a href="/admin/new_user">Add New User</a><br><br>



        </div>
    </div>


</body>
</html>

